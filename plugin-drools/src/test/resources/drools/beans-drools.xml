	<drools:kbase id="kbase1">
		<drools:resources>
			<drools:resource type="DRL" source="classpath:drools/Login.drl" />
		</drools:resources>
	</drools:kbase>
	<drools:ksession id="ksession1" type="stateful" kbase="kbase1" />

	<bean id="vip" class="com.plugin.drools.spring.model.Vip" />
	<bean id="loginService" class="com.plugin.drools.spring.service.impl.LoginServiceImpl">
		<property name="vip" ref="vip" />
	</bean>
	
</beans> 